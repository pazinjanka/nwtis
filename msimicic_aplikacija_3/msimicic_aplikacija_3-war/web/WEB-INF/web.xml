<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>interval</param-name>
        <param-value>10</param-value>
    </context-param>
    <context-param>
        <param-name>intervalJMS</param-name>
        <param-value>10</param-value>
    </context-param>
    <context-param>
        <param-name>smtp</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <param-name>pop3</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <param-name>mailUser</param-name>
        <param-value>nwtis</param-value>
    </context-param>
    <context-param>
        <param-name>mailPass</param-name>
        <param-value>nwtis</param-value>
    </context-param>
    <filter>
        <filter-name>Autorizacija</filter-name>
        <filter-class>org.foi.nwtis.msimicic.filtri.Autorizacija</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Autorizacija</filter-name>
        <url-pattern>/faces/aplikacija/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Meteo</servlet-name>
        <servlet-class>org.foi.nwtis.msimicic.meteo.Meteo</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Mail</servlet-name>
        <servlet-class>org.foi.nwtis.msimicic.posta.Mail</servlet-class>
        <!-- <load-on-startup>1</load-on-startup> -->
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.jsf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.faces</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Mail</servlet-name>
        <url-pattern>/Mail</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>javax.faces.application.ViewExpiredException</exception-type>
        <location>/error.xhtml</location>
    </error-page>
    <ejb-ref>
        <ejb-ref-name>PoslanePorukeFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>org.foi.nwtis.msimicic.sB.PoslanePorukeFacadeRemote</remote>
    </ejb-ref>
    <servlet-mapping>
        <servlet-name>Meteo</servlet-name>
        <url-pattern>/Meteo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>jms/msimicic_Tvornica</res-ref-name>
        <res-type>javax.jms.QueueConnectionFactory</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <message-destination-ref>
        <message-destination-ref-name>jms/msimicic_RedCekanja</message-destination-ref-name>
        <message-destination-type>javax.jms.Queue</message-destination-type>
        <message-destination-usage>Produces</message-destination-usage>
        <message-destination-link>jms/msimicic_RedCekanja</message-destination-link>
    </message-destination-ref>
</web-app>
